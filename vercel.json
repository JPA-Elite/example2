{
    "version": 2,
    "builds": [
      {
        "src": "public/**",
        "use": "@vercel/static-build",
        "config": {}
      },
      {
        "src": "api/**",
        "use": "@vercel/node",
        "config": {
          "maxDuration": 60
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.php" },
      { "src": "/(.*)", "dest": "/$1" }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": ""
    }
  }
  